{{ 'section-landing-reviews.css' | asset_url | stylesheet_tag }}
{{ 'swiper.css' | asset_url | stylesheet_tag }}
<script src="{{ 'swiper.js' | asset_url }}" defer></script>
<script src="{{ 'infinity-scroll-slider.js' | asset_url }}" defer></script>

<div class="landing-reviews__container">
  {% if section.settings.title != blank %}
    <header class="landing-reviews__header page-width">
      <h2 class="landing-reviews__title">{{ section.settings.title }}</h2>
    </header>
  {% endif %}

  <infinity-scroll-slider class="landing-reviews__scroll-images">
    <div class="swiper-wrapper landing-reviews__swiper-wrapper">
    {%- for block in section.blocks -%}
      <div class="landing-reviews__image swiper-slide">
        {%- if block.settings.image != blank -%}
          {{ block.settings.image |  image_url: width: 800 | image_tag }}
        {%- else -%}
            {{ 'image' | placeholder_svg_tag }}
        {%- endif -%}
      </div>
    {%- endfor -%}
    </div>
  </infinity-scroll-slider>
</div>

{% schema %}
{
    "name": "Landing reviews",
    "tag": "section",
    "class": "landing-reviews",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "title",
        "default": "Reviews"
      }
    ],
    "blocks": [
      {
        "name": "Image",
        "type": "image",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "image"
          }
        ]
      }
    ],
    "presets": [
    {
        "name": "Landing reviews"
    }
  ]
}
{% endschema %}